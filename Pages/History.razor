@page "/history"
@inject HttpClient Http
@using System.Net.Http.Json
@using StockApp.Models
@using StockApp.Clients;
@inject StockClient StockClient;
@inject ILocalStorageService LocalStorage

<PageTitle>History</PageTitle>

        <!-- Page Content-->
        <div class="container px-4 px-lg-5">
@if (historyLogs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th> User </th>
                <th>Symbol Searched</th>
                <th>Date Time</th>
                <th>Open</th>
                <th>High</th>
                <th>Low</th>
                <th>Close</th>
                <th>Volume</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in historyLogs)
            {
                <tr>
                    <td>User</td>
                    <td>@value</td>
                </tr>
            }
        </tbody>
    </table>
}
        </div>


@code {
    private string[]? historyLogs;
    private StockResponse? stockResponse = null;
    protected override async Task OnInitializedAsync()
    {
        await LoadHistoryLogs();
    }
    //private List<string> searchHistory = new List<string>(); 
    private async Task LoadHistoryLogs()
    {
        historyLogs = await LocalStorage.GetItemAsync<string[]>("searchHistory"); 
    }
}
